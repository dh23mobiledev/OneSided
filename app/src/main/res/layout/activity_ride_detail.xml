<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBak"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/medium"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:tint="@color/black" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/suv" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                android:layout_marginTop="@dimen/semiSmall"
                android:text="Ahemdabad To Vadodara"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_16sp" />

            <TextView
                android:id="@+id/txtTotalFare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                android:layout_marginTop="@dimen/smallSpace1"
                android:text="Booking ID 5045612"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14sp" />


            <TextView
                android:id="@+id/txtTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTotalFare"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                android:layout_marginTop="@dimen/smallSpace1"
                android:text="DRIVER DETAILS"
                android:textAlignment="center"
                android:textSize="@dimen/textsize_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallSpace1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtGstFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="husen ansari"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="789456123"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14sp" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/semiSmall"
                android:elevation="@dimen/small"
                android:padding="@dimen/small"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            >

                            <EditText
                                android:id="@+id/edtPassName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/passname"
                                android:inputType="textEmailAddress" />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/edtMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_perm_contact_calendar_black_24dp"
                                android:hint="@string/passmobile"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/edtPickDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/pickdate"
                                android:inputType="textEmailAddress" />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/edtPickTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/picktime"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary">

                        <EditText
                            android:id="@+id/edtPickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_my_location_black_24dp"
                            android:hint="@string/pickup"
                            android:inputType="textEmailAddress" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_height="wrap_content">

                        <EditText

                            android:id="@+id/edtDrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_my_location_black_24dp"
                            android:hint="@string/dropat"
                            android:inputType="textEmailAddress" />

                    </android.support.design.widget.TextInputLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Ride Amount : 1500"
                        android:textSize="@dimen/textsize_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balance Rs. 1500 to be paid to driver"
                        android:textSize="@dimen/textsize_16sp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/medium">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_border_dark"
                            android:text="Cancel"
                            android:layout_margin="@dimen/semiSmall"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/bookNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_border_dark"
                            android:text="Modify"
                            android:layout_margin="@dimen/semiSmall"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>