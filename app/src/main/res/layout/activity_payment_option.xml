<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RideDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBak"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/medium"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:tint="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/medium"
                android:layout_toRightOf="@+id/imgBak"
                android:text="@string/selectpayment"
                android:textSize="@dimen/textsize_24sp"
                android:textStyle="bold"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/medium"
                android:text="@string/totalAmount"
                android:textSize="@dimen/textsize_20sp"
                android:textAlignment="center"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/Amount"
                android:textSize="@dimen/textsize_20sp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tolltax"
                android:textSize="@dimen/textsize_16sp"
                android:textAlignment="center"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="@dimen/medium"/>


            <TextView
                android:padding="@dimen/medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/AmountPayble"
                android:textSize="@dimen/textsize_20sp"
                android:textAlignment="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimary" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paymentmethod"
                android:textSize="@dimen/textsize_20sp"
                android:layout_margin="@dimen/medium"
                android:padding="@dimen/small"
                />

        </LinearLayout>



        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:padding="@dimen/small"
                    android:text="@string/paydriver"
                    android:textSize="@dimen/textsize_18sp"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:padding="@dimen/small"
                    android:text="@string/card"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:textSize="@dimen/textsize_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:padding="@dimen/small"
                    android:text="@string/netbanking"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:textSize="@dimen/textsize_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:padding="@dimen/small"
                    android:text="@string/paypal"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:textSize="@dimen/textsize_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:padding="@dimen/small"
                    android:text="@string/paytm"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:textSize="@dimen/textsize_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>